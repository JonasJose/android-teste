<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/novoJogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/novoJogo"
            android:layout_height="50dp"
            android:layout_width="260dp"
            android:onClick="btnOnNovoJogo"
            android:text="Novo Jogo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Jogador: 0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labJogador"
            android:textAlignment="center"
            android:layout_weight="0.89" />

        <TextView
            android:text="X"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vs"
            android:layout_weight="0.89"
            android:textAlignment="center"/>

        <TextView
            android:text="Computador: 0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labComputador"
            android:textAlignment="center"
            android:layout_weight="0.89" />

        <TextView
            android:text="X"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vsvelha"
            android:layout_weight="0.89"
            android:textAlignment="center" />

        <TextView
            android:text="Velha: 0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labVelha"
            android:layout_weight="0.89"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/novoJogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn01"
            android:onClick="btnOnClick"
            android:layout_width="95dp"
            android:layout_height="95dp" />

        <Button
            android:id="@+id/btn04"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:onClick="btnOnClick"/>

        <Button
            android:id="@+id/btn07"
            android:onClick="btnOnClick"
            android:layout_width="95dp"
            android:layout_height="95dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/novoJogo"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btn02"
            android:layout_height="95dp"
            android:layout_width="95dp"
            android:onClick="btnOnClick"/>

        <Button
            android:id="@+id/btn05"
            android:onClick="btnOnClick"
            android:layout_width="95dp"
            android:layout_height="95dp" />

        <Button
            android:id="@+id/btn08"
            android:onClick="btnOnClick"
            android:layout_width="95dp"
            android:layout_height="95dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/novoJogo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:id="@+id/btn03"
            android:layout_height="95dp"
            android:layout_width="95dp"
            android:onClick="btnOnClick"/>

        <Button
            android:id="@+id/btn06"
            android:onClick="btnOnClick"
            android:layout_width="95dp"
            android:layout_height="95dp" />

        <Button
            android:id="@+id/btn09"
            android:onClick="btnOnClick"
            android:layout_width="95dp"
            android:layout_height="95dp" />

    </LinearLayout>

</LinearLayout>